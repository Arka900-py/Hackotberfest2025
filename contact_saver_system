contacts = {}

while True:
    print("\n-----:Contact Book App:-----1\n")
    print("1. Create Contact")
    print("2. View Contact")
    print("3. Update Contact")
    print("4. Delete Contact")
    print("5. Search Contact")
    print("6. Count Contact")
    print("7. Exit")

    choice = input("Please Enter any choice you want: ")
    if(choice == "1"):
        name = input("Please Enter name: ")
        if name in contacts:
            print(f"Contact {name} already exists!")
        else:
            age = input("Please Enter Age: ")
            email = input("Please Enter Email: ")
            mobile = input("Please Enter Mobile No.: ")
            contacts[name] = {"age":int(age),"email":email,"mobile":mobile}
            print("Contact {name} is created in the Contact-Book Successfully!")
    elif(choice == "2"):
        name = input("Please Enter the name: ")
        if name in contacts:
            contact = contacts[name]
            print(f"Name:{name},Email:{email},Mobile No.:{mobile}")
        else:
            print(f"The Contact {name} does not exist!")

    elif choice == "3":
        name = input("Enter the name to update: ")
        if name in contacts:
            age = input("Please Enter Updated Age: ")
            email = input("Please Enter Updated Email: ")
            mobile = input("Please Enter Updated Mobile No.: ")
            contacts[name] = {"age":int(age),"email":email,"mobile":mobile}
            print(f"New Contact {name} is successfully updated!")
        else:
            print(f"The Contact {name} does not exists!!")
    
    elif choice == "4":
        name = input("Please Enter the name to delete: ")
        if name in contacts:
            del contacts[name]
            print(f"The Contact {name} is deleted successfully from contact-book!")
        else:
            print(f"The contact {name} does not exist!!")

    elif choice == "5":
        search_name = input("Please Enter the name to search: ")
        found = False
        for name, contact in contacts.items():
            if search_name.lower() in name.lower():
                print(f"Found The Contact --> Name:{name}, Age:{age},Email:{email},Mobile:{mobile}")
                found = True
            else:
                print("The Contact Does Not Exist!!")

    elif choice == "6":
        print(f"Total Contacts in your Contact-Book is: {len(contacts)}")
                
    elif choice == "7":
        print("Closing Contact Book App.......")
        break
    else:
        print("Invalid Input given")

           
